#! /usr/bin/env bash

set -o errexit -o nounset

case "${1-}" in
  -h|--help|help)
    cat <<USAGE
Usage: $0 [sphinx opts]

Build or update documentation using Sphinx. Any commmand line args are passed to Sphinx.

USAGE
  exit
esac

echo "Updating documentation into ./docs"

set -o verbose
sphinx-apidoc --module-first --separate --ext-autodoc --ext-doctest --ext-viewcode --output docs_src/etl python/etl
sphinx-build -M html ./docs_src ./build "$@"
cp -a "./build/html" "./docs/"

set +o verbose
echo "The HTML pages were copied into docs."

cat <<OPEN_HTML

To view the documentation, run:

open docs/html/index.html
OPEN_HTML
