{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "console": {
            "class": "etl.config.formatter.ColorfulFormatter",
            "datefmt": "%Y-%m-%d %H:%M:%S",
            "format": "%(asctime)s - %(levelname)s - %(message)s"
        },
        "file": {
            "format": "%(asctime)s %(trace_key)s %(levelname)s %(name)s (%(threadName)s) [%(filename)s:%(lineno)d] %(message)s"
        }
    },
    "filters": {
        "insert_trace_key": {
            "()": "etl.monitor.InsertTraceKey"
        }
    },
    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "formatter": "console",
            "level": "INFO",
            "stream": "ext://sys.stderr",
            "filters": [ "insert_trace_key" ]
        },
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "file",
            "level": "DEBUG",
            "filename": "arthur.log",
            "mode": "a",
            "maxBytes": 8388608,
            "backupCount": 5,
            "filters": [ "insert_trace_key" ],
            "encoding": "UTF-8"
        },
        "arthur_http": {
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "console",
            "level": "DEBUG",
            "filename": "arthur_http.log",
            "mode": "a",
            "maxBytes": 10000,
            "backupCount": 1,
            "delay": 1,
            "filters": [ "insert_trace_key" ]
        }
    },
    "root": {
        "handlers": [ "console", "file" ],
        "level": "NOTSET"
    },
    "loggers": {
        "botocore": {
            "qualname": "botocore",
            "handlers": [ "file" ],
            "level": "INFO",
            "propagate": 0
        },
        "botocore.credentials": {
            "qualname": "botocore.credentials",
            "handlers": [ "file" ],
            "level": "INFO",
            "propagate": 0
        },
        "boto3": {
            "qualname": "boto3",
            "handlers": [ "file" ],
            "level": "INFO",
            "propagate": 0
        },
        "boto3.resources.action": {
            "qualname": "boto3.resources.action",
            "handlers": [ "file" ],
            "level": "WARNING",
            "propagate": 0
        },
        "arthur_http": {
            "qualname": "arthur_http",
            "handlers": [ "arthur_http" ],
            "level": "INFO",
            "propagate": 0
        },
        "s3transfer": {
            "qualname": "s3transfer",
            "handlers": [ "file" ],
            "level": "INFO",
            "propagate": 0
        },
        "urllib3": {
            "qualname": "urllib3",
            "handlers": [ "file" ],
            "level": "INFO",
            "propagate": 0
        },
        "py4j.java_gateway": {
            "qualname": "py4j.java_gateway",
            "handlers": [ "file" ],
            "level": "INFO",
            "propagate": 0
        }
    }
}
